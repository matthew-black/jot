<div class="container">
   <div class="jot-container">

    <% if authorized?(@jot.user)  %>
      <form class="left" method="POST" action="/jots/<%= @jot.id %>">
          <input type="hidden" name="_method" value="PUT">
          <input type="submit" id="share-unshare-button" value="<%= @jot.viewability %>">
      </form>
    <% end %>
  <p class="right photog-attribution">
    <a href="<%= @jot.photo.photog_url %>"><%= @jot.photo.photog_name %></a>
    <span class="slash"> / </span><a href="https://unsplash.com/">Unsplash</a>
  </p>
    <img class="unsplashed" src="<%= @jot.photo.url %>">

    <p class="left unsplashed jot-content"><%= @jot.content %></p>
    <p class="jot-author">jotted by <%= @jot.user.full_name %> on <%= long_form_date(@jot.created_at) %></p>
  </div>

</div>
